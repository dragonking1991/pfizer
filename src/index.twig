{% block page %}

	<video autoplay muted loop>
		<source src="assets/videos/Zavicefta_launch_video_220317.mp4" type="video/mp4"/>
		Your browser does not support HTML5 video.
	</video>

	<!-- Slider main container -->
	<div
		class="swiper" data-module="Slider">
		<!-- Additional required wrapper -->
		<div
			class="swiper-wrapper">
			<!-- Slides -->
			<div class="swiper-slide">
				<div class="slide__dashboard">
					<img src="assets/images/landing/Pfizer_Logo_White_RGB.svg" alt="" class="dashboard__pfizer"/>
					<img src="assets/images/landing/Zavi_Logo.svg" alt="" class="dashboard__zavi"/>
					<div class="dashboard__inner">
						<img src="assets/images/landing/PW_Logo.svg" alt="" class="dashboard__pw"/>
						<p class="dashboard__param">
							Are you ready to test your pathogen knowledgein<br/>
							an augmented reality quiz?
						</p>
					</div>
				</div>
			</div>
			<div class="swiper-slide">
				<div class="slide__leaderboard">
          <h2>Leaderboard</h2>
          <ul>
            <li>
              
            </li>
          </ul>

				</div>
			</div>
			<div class="swiper-slide">
        <video>
          <source src="assets/videos/Zavicefta_launch_video_220317.mp4" type="video/mp4"/>
          Your browser does not support HTML5 video.
        </video>
			</div>
		</div>

		<div class="swiper-button-next"></div>
		<div class="swiper-button-prev"></div>
		<div class="swiper-pagination"></div>
	</div>
{% endblock %}
