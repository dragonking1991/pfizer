{% extends "./_templates/layout.twig" %} {# If rename this file, rename in gulp
'html' task as well #} {% block page %}

<video autoplay="" playsinline="" muted="" loop id="video-bg">
  <source src="assets/videos/TrimeBGVideo4k.mp4" type="video/mp4" />
  Your browser does not support HTML5 video.
</video>

<!-- Slider main container -->
<div
  class="swiper"
  data-module="Slider DisplayLeaderBoard"
  data-autoslide="15000"
  data-refresh-api="5000"
>
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    <div class="swiper-slide slide--main">
      <div class="slide__dashboard">
        <img
          src="assets/images/landing/Pfizer_Logo_White_RGB.svg"
          alt=""
          class="dashboard__pfizer"
        />
        <img
          src="assets/images/landing/Zavi_Logo.svg"
          alt=""
          class="dashboard__zavi"
        />
        <div class="dashboard__inner">
          <div class="dashboard__pw">
            <img
              src="assets/images/landing/PW_Logo.svg"
              alt=""
              class="dashboard__pw"
            />
          </div>
          <p class="dashboard__param">
            Are you ready to test your pathogen knowledge in<br />
            an augmented reality quiz?
          </p>
        </div>
      </div>

      <div class="leaderboard__inner">
        <div class="leaderboard__slider">
          <h2>Leaderboard</h2>
          <div class="leaderboard__wrap">
            <ul class="leaderboard__list" data-by="country">
              <li>
                <img src="assets/images/landing/empty.svg" alt="" style="margin:1vw auto"/>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="swiper-slide slide--video">
      <button class="btn-play hidden">Click To Play</button>
      <video autoplay="" playsinline="" muted="" preload="auto" data-time-limit="60">
        <source
          src="assets/videos/Zavicefta_launch_video_220317.mp4"
          type="video/mp4"
        />
        Your browser does not support HTML5 video.
      </video>
    </div>
  </div>

</div>
{% endblock %}
